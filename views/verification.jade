          td(valign='top')
            table(cellpadding='0', cellspacing='0', style='box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.15); border-radius: 5px; -webkit-border-radius: 5px; border: 1px solid #003a99; -moz-border-radius: 5px;', border='0', align='center')
